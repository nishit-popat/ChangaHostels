<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backbg"
    tools:context=".shrdp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/shreedeep_hostel"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/shrdprooms"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/shreedeep_rooms"
            android:src="@drawable/room_icon" />
        <Button
            android:id="@+id/shrdproom"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_btn"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shrdprooms"
            android:contentDescription="@string/shreedeep_rooms"
            android:text="@string/rooms" />

        <ImageView
            android:id="@+id/shrdpspecialfacilitiess"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/shreedeep_special_facilities"
            android:src="@drawable/specialfacilities_icon" />

        <Button
            android:id="@+id/shrdpspecialfacilities"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/custom_btn"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shrdpspecialfacilitiess"
            android:contentDescription="@string/shreedeep_special_facilities"
            android:text="@string/special_facilities"
            tools:ignore="UnknownId" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/shrdpfeess"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/shreedeep_fees"
            android:src="@drawable/fees_icon" />

        <ImageView
            android:id="@+id/shrdpaddresss"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/shreedeep_address"
            android:src="@drawable/address_icon" />

        <Button
            android:id="@+id/shrdpfees"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/custom_btn"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shrdpaddresss"
            android:contentDescription="@string/shreedeep_fees"
            android:text="@string/fees" />

        <Button
            android:id="@+id/shrdpaddress"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn"
            android:layout_marginTop="5dp"
            android:layout_marginStart="190dp"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/shrdpaddresss"
            android:contentDescription="@string/shreedeep_address"
            android:text="@string/address"
            tools:ignore="UnknownId" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/shrdpcontacts"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/shreedeep_contact"
            android:src="@drawable/contact_icon" />
        <Button
            android:id="@+id/shrdpcontact"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_btn"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/shrdpcontacts"
            android:contentDescription="@string/shreedeep_contact"
            android:text="@string/contact" />
    </RelativeLayout>
</LinearLayout>